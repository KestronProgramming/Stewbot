    // Don't show these files. They are important, but not needed to be edited.
    "files.exclude": {
        "eslint.config.mjs": true,
        "**/node_modules": true,
        "package-lock.json": true,
        "Database": true,
        "run.bat": true,
        "tsconfig.json": true,
        "run.sh": true,
        "globals.d.ts": true,
        "command-module.d.ts": true,
    },

    // Project specific
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "javascript.preferences.importModuleSpecifierEnding": "js",
    // "javascript.preferences.autoImportFileExcludePatterns": [],
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.useFlatConfig": true,
    "editor.defaultFormatter": "dbaeumer.vscode-eslint", // force eslint formatting

    // Preferences
    "javascript.suggest.autoImports": true,
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.showWords": false,
    "editor.formatOnSave": false,

    // Auto-Fix on save - I leave off due to being slow
    "editor.codeActionsOnSave": {
        // Handle import on save
        "source.addMissingImports.ts": "never",
        "source.removeUnused.ts": "never",
        // Options not supported by our non-ES6 codebase:
        "source.fixAll.eslint": "never",
        "source.organizeImports": "never",
        "source.removeUnusedImports": "never",
        "source.sortImports": "never",
    },

    // Force 4 spaces
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false
  }