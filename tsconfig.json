{
  "compilerOptions": {
    // "noImplicitAny": true,  // Too Strict for JS code
    "strictNullChecks": false, // If this is true, it prevents suggesting methods that don't exist on all children. With it false, it suggests it but also warns.
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false, // Don't give errors, just give intellisense
    "noEmit": true,
    "strict": false,
    "target": "es2024",

    "allowUmdGlobalAccess" : true,

    "skipLibCheck": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "include": [
    "**/*.js",
    "./globals.d.ts", // Define globals we use
    "./command-module.d.ts", // Define command module structure
  ],
  "exclude": [
    "node_modules",
    "./commands/disabled/"
  ]
}
