{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "incremental": true,
        // "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./types",
    },
    "include": [
        "commands/**/*.js", "modules/**/*.js", "scripts/**/*.js", "index.js",
        "commands/modules/**/*.js"
    ]
}