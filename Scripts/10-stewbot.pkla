# For polkit version <= v106, copy this file to /etc/polkit-1/localauthority/50-local.d/10-stewbot.pkla
[Allow user full control over stewbot.service]
Identity=unix-user:guest
Action=org.freedesktop.systemd1.manage-units
ResultAny=yes
ResultInactive=yes
ResultActive=yes
# Target ONLY stewbot.service
Condition=Systemd.Unit.MayStartAs(stewbot.service); Systemd.Unit.MayStopAs(stewbot.service); Systemd.Unit.MayRestartAs(stewbot.service)
